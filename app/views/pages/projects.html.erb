    <!-- Tarjeta PBB -->
    <div class="card mt-5">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag 'PBBPortada.png', class: 'img-fluid', alt: 'PBB' %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">PioBoomBattles</h5>
