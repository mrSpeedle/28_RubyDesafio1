                <%= image_tag 'KFE1.png', class: 'd-block w-100', alt: 'KFE Image 1' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'KFE2.png', class: 'd-block w-100', alt: 'KFE Image 2' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'KFE3.png', class: 'd-block w-100', alt: 'KFE Image 3' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'KFE4.png', class: 'd-block w-100', alt: 'KFE Image 4' %>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#kfeCarousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#kfeCarousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
          <div class="card-body">
            <h5 class="card-title">KFE</h5>
            <p class="card-text">Descripción de KFE aquí.</p>
            <a href="#" class="btn btn-primary">Ver más</a>
          </div>
        </div>
      </div>

      <!-- Tarjeta VIDA -->
      <div class="col-md-4">
        <div class="card">
          <div id="carouselVida" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <%= image_tag 'VIDA.jpg', class: 'd-block w-100', alt: 'Project VIDA 1', data: { bs_toggle: 'tooltip' }, title: 'VIDA 1' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'VIDA1.png', class: 'd-block w-100', alt: 'Project VIDA 2', data: { bs_toggle: 'tooltip' }, title: 'VIDA 2' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'VIDA2.png', class: 'd-block w-100', alt: 'Project VIDA 3', data: { bs_toggle: 'tooltip' }, title: 'VIDA 3' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'VIDA3.png', class: 'd-block w-100', alt: 'Project VIDA 4', data: { bs_toggle: 'tooltip' }, title: 'VIDA 4' %>
              </div>
              <div class="carousel-item">
                <%= image_tag 'VIDA4.png', class: 'd-block w-100', alt: 'Project VIDA 5', data: { bs_toggle: 'tooltip' }, title: 'VIDA 5' %>
